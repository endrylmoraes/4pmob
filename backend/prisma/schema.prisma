generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String
  password   String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("users")
}

model Building {
  id         String    @id @default(uuid())
  available  Boolean   @default(true)
  rentValue  String
  saleValue  String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  Rent Rent[]

  @@map("buildings")
}

model Tenant {
  id         String    @id @default(uuid())
  name       String
  age        Int
  email      String
  cpf        String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  rents Rent[]

  @@map("tenants")
}

model Locator {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  rents Rent[]

  @@map("locators")
}

model Rent {
  id         String    @id @default(uuid())
  dt_start   DateTime
  dt_end     DateTime
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  locator   Locator   @relation(fields: [id_locator], references: [id])
  tenant    Tenant    @relation(fields: [id_tenant], references: [id])
  apartment Building @relation(fields: [id_apartment], references: [id])

  id_locator   String
  id_tenant    String
  id_apartment String

  @@map("rents")
}